<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire_BAC"
    android:background="@drawable/custom_page">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:text="@string/questionnaire_dut2"
                android:textColor="#ff0000"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:text="@string/bonjour_voici_le_qcm_il_n_y_a_qu_une_seule_bonne_r_ponse_par_question_bonne_chance"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/gprs"
                android:textSize="17sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/Btn3"
                    android:layout_width="138dp"
                    android:layout_height="45dp"
                    android:text="@string/_1900" />

                <RadioButton
                    android:id="@+id/Btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="@string/_1980" />

                <RadioButton
                    android:id="@+id/Btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="@string/_2000" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/BGP"
                android:textSize="17sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/Btn6"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:text="@string/IGP" />

                <RadioButton
                    android:id="@+id/Btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/egp" />

                <RadioButton
                    android:id="@+id/Btn4"
                    android:layout_width="166dp"
                    android:layout_height="52dp"
                    android:text="@string/Aucun" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="@string/pyth"
                android:textSize="17sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/Btn9"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:text="@string/tchou3" />

                <RadioButton
                    android:id="@+id/Btn8"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="@string/uneErreur" />

                <RadioButton
                    android:id="@+id/Btn7"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="@string/tchoutchou" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="@string/AOP"
                android:textSize="17sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <RadioButton
                    android:id="@+id/Btn10"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:text="@string/bpinf" />

                <RadioButton
                    android:id="@+id/Btn11"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text="@string/gaininf" />

                <RadioButton
                    android:id="@+id/Btn12"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/gainnul" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="@string/XML"
                android:textSize="17sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/Btn13"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="@string/tt" />

                <RadioButton
                    android:id="@+id/Btn14"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="@string/grph" />

                <RadioButton
                    android:id="@+id/Btn15"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:text="@string/fct" />
            </RadioGroup>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Soumettre" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>